<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_tab3"
        xmlns:card_view1="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        card_view1:cardCornerRadius="4dp"
        card_view1:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_imageview_card3"
                android:src="@drawable/ic_event"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <TextView
                android:id="@+id/tv_textView_card3"
                android:layout_toRightOf="@+id/iv_imageview_card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"/>

            <TextView
                android:text="Tap to Expand !"
                android:layout_below="@+id/tv_textView_card3"
                android:layout_toRightOf="@+id/iv_imageview_card3"
                android:layout_toEndOf="@+id/iv_imageview_card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>